<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.fayadh.androidfinance.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:text="Budget Vocality"
        android:textColor="#311B92"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="$0.00"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Deposit or Withdraw"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/updatePrice"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#8C9EFF"
        android:onClick="getBalance"
        android:text="Update Price" />

    <Button
        android:id="@+id/resetPrice"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#8C9EFF"
        android:onClick="resetBalance"
        android:padding="15dp"
        android:text="Reset" />

    <ImageButton
        android:id="@+id/listenButton"
        android:layout_width="68dp"
        android:layout_height="121dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#B39DDB"
        android:onClick="listenButtonOnClick"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@drawable/mic22"
        android:text="Listen" />

</LinearLayout>
